<Window x:Class="Pasjans.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pasjans.View"
        mc:Ignorable="d"
        Title="Pasjans" Height="450" Width="800">
    <DockPanel>
        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Widoki">
                <MenuItem Header="Strona Główna" Click="GoToHome"/>
                <MenuItem Header="Nowa Gra" Click="GoToGame"/>
            </MenuItem>
        </Menu>

        <!-- Miejsce na dynamicznie zmieniany widok -->
        <ContentControl x:Name="MainContent" />
    </DockPanel>
</Window>
